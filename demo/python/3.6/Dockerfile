FROM registry.cn-shanghai.aliyuncs.com/aliyun_workbench/python3.6:1.0

# Copy files/directorys to workdir
COPY . .

RUN pip install gunicorn
RUN pip install -r requirements.txt --target ./

EXPOSE 8080

# start.sh is generated by prepare.sh, prepare.sh is called when deploying, 
# you shouldn't create start.sh manually
ENTRYPOINT sh ./start.sh

